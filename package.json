{
  "name": "mdview",
  "version": "4.0.0",
  "description": "Standalone Markdown Viewer",
  "keywords": [
    "markdown",
    "md",
    "viewer",
    "standalone"
  ],
  "homepage": "https://github.com/c3er/mdview",
  "repository": {
    "type": "git",
    "url": "https://github.com/c3er/mdview.git"
  },
  "author": "Christian Dreier",
  "license": "MIT",
  "main": "app/main.js",
  "scripts": {
    "start": "electron . --log-dir logs",
    "test": "eslint . --max-warnings 0 && prettier --check . && mocha --timeout 20000",
    "format": "prettier --write .",
    "dist": "electron-builder --config build/deployConfig.js"
  },
  "dependencies": {
    "@node-ipc/node-ipc": "11.0.3",
    "electron-log": "5.1.5",
    "github-markdown-css": "5.6.1",
    "github-markdown-dracula-css": "4.0.3",
    "highlight.js": "11.10.0",
    "markdown-it": "14.1.0",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "electron": "31.2.0",
    "electron-builder": "24.13.3",
    "eslint": "9.6.0",
    "eslint-config-prettier": "9.1.0",
    "mocha": "10.6.0",
    "playwright": "1.45.1",
    "prettier": "3.3.2"
  }
}
